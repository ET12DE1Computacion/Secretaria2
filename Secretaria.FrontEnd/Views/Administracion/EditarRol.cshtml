@model Secretaria.FrontEnd.ViewModels.Administracion.EditarRolViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1 class="display-4">Editar Rol</h1>

<div class="et12-borde">
    <form method="post" class="mt-3" asp-controller="Administracion" asp-action="EditarRol">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Id" disabled class="form-control">
            </div>
            <div class="col-2">
                <label asp-for="CreatedBy" class=" col-form-label">Creado Por</label>
            </div>
            <div class="col-4">
                <input asp-for="CreatedBy" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NombreRol" class="col-form-label">Nombre</label>
            </div>
            <div class="col-4">
                <input asp-for="NombreRol" class="form-control">
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CreationDate" class=" col-form-label">Fecha creación</label>
            </div>
            <div class="col-4">
                <input asp-for="CreationDate" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Area" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Area" class="form-control">
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CreationIp" class="col-form-label">IP</label>
            </div>
            <div class="col-4">
                <input asp-for="CreationIp" disabled class="form-control">
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-primary">Actualizar</button>
                <a asp-action="Roles" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </div>
    </form>
</div>

<br />

<div class="card">
    <div class="card-header">
        <h3>Usuarios asignados al rol</h3>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">Ninguno</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="Administracion" asp-action="EditarUsuarioEnRol" asp-route-roleId="@Model.Id" class="btn btn-outline-primary"><i class="fad fa-tasks"></i> Administrar usuarios</a>
    </div>
</div>
