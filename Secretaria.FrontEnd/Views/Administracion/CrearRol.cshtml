@model Secretaria.FrontEnd.ViewModels.Administracion.CrearRolViewModel

@{
    ViewBag.Title = "Create New Role";
}


<h1 class="display-4">Crear Rol</h1>
<div class="col-4 et12-borde">

    <form asp-controller="Administracion" asp-action="CrearRol" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group">
            <label asp-for="NombreRol"></label>
            <input asp-for="NombreRol" class="form-control">
            <span asp-validation-for="NombreRol" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Area"></label>
            <input asp-for="Area" class="form-control">
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-primary" style="width:auto"> Guardar</button>
                <a asp-action="Roles" class="btn btn-outline-primary"> Cancelar</a>
            </div>
        </div>
    </form>
</div>
