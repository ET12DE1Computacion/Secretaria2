@model Secretaria.FrontEnd.ViewModels.Administracion.EditarUsuarioViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1 class="display-4">Editar Usuario</h1>

<div class="et12-borde">
    <form method="post" class="mt-3" asp-controller="Administracion" asp-action="EditarUsuario">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Id" disabled class="form-control">
            </div>
            <div class="col-2">
                <label asp-for="CreatedBy" class=" col-form-label">Creado Por</label>
            </div>
            <div class="col-4">
                <input asp-for="CreatedBy" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CreationDate" class=" col-form-label">Fecha creación</label>
            </div>
            <div class="col-4">
                <input asp-for="CreationDate" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CreationIp" class="col-form-label">IP</label>
            </div>
            <div class="col-4">
                <input asp-for="CreationIp" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NombreCompleto" class="col-form-label">Nombre Completo</label>
            </div>
            <div class="col-4">
                <input asp-for="NombreCompleto" class="form-control">
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-primary"> Actualizar</button>
                <a asp-action="Usuarios" class="btn btn-outline-primary"> Cancelar</a>
            </div>
        </div>
    </form>
</div>
<br />
<div class="row">

    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3>Roles</h3>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Ninguno</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="AdministrarUsuarioRol" asp-route-userId="@Model.Id" class="btn btn-outline-primary"><i class="fad fa-tasks"></i> Administrar Roles</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3>Permisos</h3>
            </div>
            <div class="card-body">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Ninguno</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="AdministrarPermisosUsuario" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-outline-primary"><i class="fad fa-tasks"></i> Administrar Permisos</a>
            </div>
        </div>
    </div>
</div>

