@model Secretaria.FrontEnd.ViewModels.Administracion.CrearUsuarioViewModel

@{
    ViewBag.Title = "Registrarse";
}

<h1 class="display-4">Crear Usuario</h1>
<div class="col-4 et12-borde">
    <form enctype="multipart/form-data" method="post" asp-controller="Administracion" asp-action="CrearUsuario">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre">Nombre y Apellido</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contrasenia">Contraseña</label>
            <input asp-for="Contrasenia" class="form-control" />
            <span asp-validation-for="Contrasenia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmarContrasenia">Confirmar Contraseña</label>
            <input asp-for="ConfirmarContrasenia" class="form-control" />
            <span asp-validation-for="ConfirmarContrasenia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Imagen"></label>
            <div class="custom-file">
                <input asp-for="Imagen" class="form-control custom-file-input">
                <label class="custom-file-label">Elegir archivo..</label>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary btnLogin">Guardar</button>
        <a asp-action="Usuarios" class="btn btn-outline-primary"> Cancelar</a>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
</div>